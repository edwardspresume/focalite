{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Focalite",
	"version": "0.1.3",
	"identifier": "com.focalite.app",
	"build": {
		"beforeDevCommand": "pnpm dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "pnpm build",
		"frontendDist": "../build"
	},
	"app": {
		"windows": [
			{
				"label": "main",
				"title": "Focalite",
				"width": 800,
				"height": 800,
				"minWidth": 640,
				"minHeight": 420,
				"resizable": true,
				"center": true,
				"alwaysOnTop": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "nsis",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
